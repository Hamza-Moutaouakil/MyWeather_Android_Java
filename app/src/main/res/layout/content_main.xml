<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity"
        android:background="@drawable/bg">
    <TextView
            android:text="ville"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/ville" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="90dp"
            android:layout_marginStart="100dp" android:textSize="36sp" android:layout_marginLeft="100dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@+id/ville" app:layout_constraintStart_toStartOf="@+id/ville"
            android:layout_marginTop="48dp" android:layout_marginLeft="60dp" android:layout_marginStart="60dp"/>
    <TextView
            android:text="Temp Min  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="400dp"
            android:layout_marginStart="76dp" android:layout_marginLeft="76dp" android:textSize="24sp"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="54dp" app:srcCompat="@drawable/cold" android:id="@+id/imageView2"
            android:layout_marginLeft="9dp" android:layout_marginStart="9dp"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="390dp"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="54dp" app:srcCompat="@drawable/wind" android:id="@+id/imageView6"
            android:layout_marginLeft="70dp" android:layout_marginStart="70dp"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="Vent  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginTop="28dp" android:textSize="24sp"/>
    <ImageView
            android:layout_width="61dp"
            android:layout_height="42dp" app:srcCompat="@drawable/humidity2" android:id="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
    <TextView
            android:text="Préssion    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="24dp" android:textSize="24sp"/>
    <ImageView
            android:layout_width="73dp"
            android:layout_height="39dp" app:srcCompat="@drawable/barometer" android:id="@+id/imageView4"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginLeft="1dp" android:layout_marginStart="1dp"/>
    <TextView
            android:text="Humidité     "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView4"
            android:layout_marginTop="28dp" android:textSize="24sp"/>
    <TextView
            android:text="Dev By Hamza Moutaouakil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textColor="#F8F7F7" android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="121dp" android:layout_marginStart="121dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/tmin" app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="@+id/textView2" android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/tmax"
            app:layout_constraintTop_toBottomOf="@+id/tmin" app:layout_constraintStart_toStartOf="@+id/tmin"
            android:layout_marginTop="28dp" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/pression"
            app:layout_constraintTop_toBottomOf="@+id/tmax" app:layout_constraintStart_toStartOf="@+id/tmax"
            android:layout_marginTop="24dp" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp2"
            android:textColor="#FFF"
            android:textSize="24sp"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="232dp" android:layout_marginStart="232dp" android:layout_marginTop="147dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humidite"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@+id/pression" app:layout_constraintStart_toStartOf="@+id/pression"
            android:layout_marginTop="28dp" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:layout_marginStart="76dp"
            android:layout_marginBottom="68dp" android:textSize="24sp" android:layout_marginLeft="76dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:textSize="28px"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>